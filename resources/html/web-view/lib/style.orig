.rounded {
    overflow:hidden;
    border: 3px solid black;
    border-style: solid;
    -webkit-border-radius: 1.2em;
       -moz-border-radius: 1.2em;
            border-radius: 1.2em;
}

.panel {
    margin: 1px;
}

.control {
    border: 3px solid blue;
}

.control ul, .parameters ul {
    text-align:center;
    list-style-type: none;
    margin:0;
    padding:2;
}

.control .ui-dialog-titlebar {
    background: blue;
    color: white;
    -webkit-border-radius: 1.2em;
       -moz-border-radius: 1.2em;
            border-radius: 1.2em;
