.ui-widget {
    font-size: 0.8em;
}

.ui-dialog .ui-dialog-content {
    padding: 0.01em 0.01em;
}

iframe {
    overflow: hidden;
    border: none;
    /* for IE? */
    frameBorder: 0;
}

/* remove horizontal scrollbar in safari */
::-webkit-scrollbar {
    display: none;
}
